/* pages/order/index.wxss */

page{
  display: flex;
  height: 100%;
  background-color: rgb(241, 241, 241);
  flex-direction: column;
  align-items: center;
}
.title{
  display: flex;
  align-items: center;
  font-size:50rpx;
  font-weight: bolder;
  color: rgb(56, 56, 56);
  width: 100%;
  height: 10%;
  background-color: #fff;
}
.title text{
  position: relative;
  left: 10px;
}
.backToCartStyle{
  position: relative;
  left: 50%;
font-size: 30rpx;
color: rgb(255, 174, 0);
font-weight: lighter;
}
.messageAndAddress{
  display: flex;
  align-items: center;
  color: rgb(56, 56, 56);
  width: 100%;
  height: 15%;
  background-color: #fff;
  width: 95%;
  margin-top: 10rpx;
  border-radius: 30rpx;
}
.iconAddress{
  margin-left: 15px;
  width: 6%;
  height: 20%;
}
.message_Address{
  flex-direction: column;
  position: relative;
  height: 100%;
  width: 91%;
}

.notWriteMessage{
  position: relative;
  left: 10%;
  font-size: 50rpx;
  color: rgb(148, 148, 148);
}
.switchStyle{
  position: relative;
  top: 20rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}
.goodsOrder{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60%;
}
.orderListStyle{
  display: flex;
  position: relative;
  left: 2.5%;
  height: 35%;
  align-items:center;
  width: 95%;
  flex-direction: row;
  background-color: #fff;
  border-radius: 30rpx;
  margin-top: 10px;
}
.png{
  height: 80%;
  width: 35%;
  position: relative;
  left: 7%;
}
.txt_container{
  position: relative;
  left: 15%;
  font-size: 30rpx;
  font-weight: bolder;
  height: 250rpx;
  width: 50%;
}
.name{
  position: relative;
  top: 5%;
  height: 15%;
  font-size: 35rpx;
}
.price_num{
   width: 100%;
   height: 85%;
}
.price{
  color: rgb(248, 131, 35);
  font-size: 40rpx;
  position: absolute;
  top: 75%;
  right: 70%;
}
.sm_cur_nums{
  position: absolute;
  left: 50%;
  top: 75%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 40%;
  font-size: 40rpx;
  color: rgb(75, 75, 75);
  border: solid;
  border-radius: 30rpx;
  border-color: rgb(216, 216, 216);
}
.navigator{
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  height: 10%;
  display: flex;
  align-items: center;
}
.total{
  display: flex;
  align-items: center;
  position: relative;
  left: 45%;
  color: rgb(151, 151, 151);
}
.total text{
  color: rgb(70, 70, 70);
  font-size: 40rpx;
}
.submitOrder{
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 70%;
  background-color: rgb(253, 152, 0);
  width: 25%;
  height: 6%;
  border-radius: 30px;
  color: #fff;
  font-size: 35rpx;
}

.userMessage{
  position: relative;
  top: 20%;
  left: 10%;
  width: 100%;
  height: 20%;
  font-size: 35rpx;
}
.userPhoneNumber{
  position: relative;
  left: 40%;
  width: 100%;
  height: 20%;
  font-size: 35rpx;
}
.defaultAddress{
  display: flex;
  position: relative;
  top: 15%;
  left: 10%;
  height: 40%;
  width: 85%;
  height: 20%;
  font-size: 35rpx;
  white-space: pre-wrap;
}
.inputMessage{
  display: flex;
  flex-direction: row;
  margin: 10px;
  margin-top: 40px;
}
.inputStyle{
  border-bottom: solid;
  border-bottom-color: rgb(197, 197, 197);
}
.locatedBtn{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 8%;
  width: 25%;
  background-color: rgb(236, 236, 236);
  margin: 10px;
  border-radius: 30rpx;
  margin-top: 40px;
}
.located{
  display: flex;
  flex-direction: row;
  height: 10%;
  width: 100%;
  margin: 8rpx;
  margin-top: 40px;
}
.locatedText{
  position: relative;
  left: 2%;
  display: inline;
  width: 70%;
}
.reLocatedBtn{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80%;
  width: 25%;
  background-color: rgb(236, 236, 236);
  border-radius: 30rpx;
  position: relative;
  bottom: 5%;
}