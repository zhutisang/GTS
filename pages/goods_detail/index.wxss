/* pages/goods_detail/index.wxss */
page{
  height: 100%;
  background-color: rgb(238, 238, 238);
}
scroll-view{
  height: 90%;
  justify-content: center;
  align-items: center;
}
.details{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 70%;
}
.details view{
  width: 95%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-top: 20px;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding: 10rpx 10rpx 20rpx 10rpx;
}
image{
   width: 100%;
   height: 100vw;
}
text{
  font-size: 50rpx;
  background-color: #fff;
}
.details_list{
  position: relative;
  left: 2.5%;
  background-color: rgb(255, 255, 255);
  height: 30%;
  width: 95%;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.param{
  display: flex;
  flex-direction: column;
  width: 100%; 
}
.param text{
  font-size: 15px;
  margin: 10px 0 10px 10px;
  color: rgb(141, 141, 141);
  
}
.nav{
  height: 9%;
  width: 99%;
  display: flex;
  align-items: flex-end;
  font-size: 40rpx;
  justify-content: space-around ;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0%;
  background-color: rgb(255, 255, 255);
  padding-bottom: 15rpx;
}
.b_box{
  display: flex;
  padding: 25rpx;
  width: 38%;
  justify-content: center;
  
}

.b1_box{
  display: flex;
  flex-direction: column-reverse;
  align-items: center;
  padding: 10rpx;
  color: rgb(94, 94, 94);
  
}
datalist{
  color: rgb(248, 106, 12);
  border-top-left-radius:30rpx ;
  border-bottom-left-radius: 65rpx;
}
.shop_hide{
  position: absolute;
  height: 5%;
  width: 30%;
  bottom: 32%;
  right: 4%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(241, 241, 241, 0.205);
  border-radius: 30px;
}
.shop_hide text{
  font-size: 20px;
  margin-right:10px ;
  color: rgb(136, 136, 136);
}
.num{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border: solid;
  border-radius: 50px;
  border-color: rgb(0, 255, 98);
}
.num view{
  color: rgb(75, 75, 75);
  width: 30px;
  height: 30px;
}
.cur_num{
    font-size: 18px;
    position: relative;
    left: 9px;
    top: 3px;
    
}
.hide{
  display: none;
}
.cart_message{
  display: block;
  position: fixed;
  top: 45%;
  left: 25%;
  background-color: rgba(253, 173, 0, 0.699);
  height: 15%;
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 25px;
  border-radius: 30px;
}