/* pages/goodS_list/index.wxss */
page{
  height: 100%;
  background-color: rgb(241, 241, 241);
}
.title{
  display: flex;
  align-items: center;
  font-size:50rpx;
  font-weight: bolder;
  color: rgb(56, 56, 56);
  width: 100%;
  height: 10%;
  background-color: #fff;
}
.title text{
  margin-left: 20rpx;
}
.goodsOrder{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 90%;
}
.orderListStyle{
  display: flex;
  position: relative;
  left: 2.5%;
  height: 23%;
  align-items:center;
  width: 95%;
  flex-direction: row;
  background-color: #fff;
  border-radius: 30rpx;
  margin-top: 10px;
}
.png{
  height: 80%;
  width: 35%;
  position: relative;
  left: 7%;
}
.txt_container{
  position: relative;
  left: 10%;
  font-size: 30rpx;
  font-weight: bolder;
  height: 250rpx;
  width: 330rpx;
}
.name{
  display: flex;
  height: 50rpx;
  width: 100%;
  font-size: 35rpx;
}
.name text{
  height: 100%;
  font-weight: lighter;
  flex-wrap: nowrap;
  white-space: normal;
}
.price_num{
  display: flex;
  align-items: center;
  position: relative;
  top: 20%;
   width: 100%;
   height: 70%;
}
.price{
  color: rgb(248, 131, 35);
  font-size: 40rpx;
  position: absolute;
  bottom:20%;
}
.sm_cur_nums{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 50%;
  top: 50%;
  width: 40%;
  font-size: 40rpx;
  color: rgb(75, 75, 75);
  border: solid;
  border-radius: 30rpx;
  border-color: rgb(216, 216, 216);
}