/* pages/dealList/index.wxss */
page{
  display: flex;
  height: 100%;
  background-color: rgb(241, 241, 241);
  flex-direction: column;
  align-items: center;
}
.title{
  display: flex;
  align-items: center;
  font-size:50rpx;
  font-weight: bolder;
  color: rgb(56, 56, 56);
  width: 100%;
  height: 10%;
  background-color: #fff;
}
.title text{
  position: relative;
  left: 10px;
}
.backToCartStyle{
  position: relative;
  left: 50%;
font-size: 30rpx;
color: rgb(255, 174, 0);
font-weight: lighter;
}
.goodsOrder{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 90%;
}
.oneDeal{
  display: flex;
  position: relative;
  left: 2.5%;
  margin-top: 10px;
  width: 95%;
  flex-direction: column;
  border-radius: 30rpx;
  background-color: #fff;
}
.orderListStyle{
  display: flex;
  height: 150px;
  align-items:center;
  width: 100%;
  flex-direction: row;
  background-color: #fff;
}
.png{
  position: relative;
  height: 80%;
  width: 27%;
  left: 7%;
}
.dealWell{
  position: relative;
  left: 320px;
  top: 10px;
  height: 10%;
  width: 20%;
  color: rgb(255, 187, 0);
}
.txt_container{
  position: relative;
  bottom: 5%;
  left: 15%;
  font-size: 30rpx;
  font-weight: bolder;
  height: 60%;
  width: 60%;
}
.name{
  position: relative;
  top: 5%;
  height: 15%;
  font-size: 35rpx;
}
.price_num{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  left: 50%;
  bottom: 25%;
   width: 50%;
   height: 85%;
}
.price{
  font-weight: lighter;
  color: rgb(0, 0, 0);
  font-size: 35rpx;
}
.sm_cur_nums{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 40%;
  font-size: 30rpx;
  color: rgb(150, 150, 150);
  font-weight: lighter;
  position: relative;
  left: 15%;
}
.orderTotal{
  font-size: 35rpx;
  position: relative;
  left: 70%;
}
.bottomBox{
  height: 100px;
   display: flex;
   flex-direction: row;
   align-items: center;
}
.deleteOrder{
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  left: 7%;
  border: solid;
  width: 20%;
  height: 30%;
  border-color: rgb(216, 216, 216);
  border-radius: 30rpx;
}
.LogisticslMessage{
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  left: 35%;
  border: solid;
  width: 20%;
  height: 30%;
  border-color: rgb(216, 216, 216);
  border-radius: 30rpx;
}
.pauseOrder{
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  left: 37%;
  border: solid;
  width: 20%;
  height: 30%;
  border-color: rgb(255, 0, 0);
  border-radius: 30rpx;
  color: rgb(255, 0, 0);
}
